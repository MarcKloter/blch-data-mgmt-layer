<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="BDMLCore" packages="">
    <Appenders>
        <File name="CoreService" fileName="logs/bdml.core.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="error">
            <AppenderRef ref="CoreService"/>
        </Root>
    </Loggers>
</Configuration>